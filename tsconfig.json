{
	"compilerOptions": {
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"target": "es2016",
		"lib": ["es6"],
		"module": "commonjs",
		"rootDirs": ["src", "tests"],
		"baseUrl": "src",
		"resolveJsonModule": true,
		"allowJs": true,
		"outDir": "build",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"paths": {
			"@/tests/*": ["../tests/*"],
			"@/*": ["*"]
		}
	},
	"include": ["src", "tests"],
	"exclude": []
}
